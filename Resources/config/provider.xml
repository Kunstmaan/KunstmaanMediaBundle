<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kunstmaan_media.provider.abstract.class">Kunstmaan\MediaBundle\Helper\Provider\AbstractProvider</parameter>
        <parameter key="kunstmaan_media.provider.file.class">Kunstmaan\MediaBundle\Helper\Provider\FileProvider</parameter>
        <parameter key="kunstmaan_media.provider.image.class">Kunstmaan\MediaBundle\Helper\Provider\ImageProvider</parameter>
        <parameter key="kunstmaan_media.provider.code.class">Kunstmaan\MediaBundle\Helper\Provider\CodeProvider</parameter>
    </parameters>

    <services>
        <service id="kunstmaan_media.provider.abstract" class="%kunstmaan_media.provider.abstract.class%" abstract="true">
            <argument>kunstmaan_media.provider.abstract</argument>
            <argument />
            <argument />
            <argument />
            <argument />
        </service>

        <service id="kunstmaan_media.provider.image" class="%kunstmaan_media.provider.image.class%" parent="kunstmaan_media.provider.abstract">
            <call method="setImageManipulator">
                <argument />
            </call>
        </service>

        <service id="kunstmaan_media.provider.file" class="%kunstmaan_media.provider.file.class%" parent="kunstmaan_media.provider.abstract" />

        <service id="kunstmaan_media.provider.code" class="%kunstmaan_media.provider.code.class%" parent="kunstmaan_media.provider.abstract" />
    </services>

</container>
