{% extends 'KunstmaanMediaBundle:Chooser:imagechooser.html.twig' %}



{% block subbreadcrumb %}{%  set galstype = 'media.menu.'~gallery.type~'s' %}
    {% for parent in gallery.parents %}
    <li><a href="{{ path('KunstmaanMediaBundle_image_chooser_show_folder', { 'folderId': parent.id, 'slug': parent.slug }) }}">{{ parent.name | trans }}</a></li>
    {% endfor %}
	<li class="active">{{ gallery.name | trans }}</li>
{% endblock %}




{% block content %}
	{% set FolderType = 'media.'~gallery.type~'.'~gallery.type %}

	<h1>{{ gallery.name | trans }}{% if gallery.parent %} <small>{{ 'media.folder.sub' | trans }} <a href="{{ path('KunstmaanMediaBundle_image_chooser_show_folder', { 'folderId': gallery.parent.id, 'slug': gallery.parent.slug }) }}">{{ gallery.parent.name | trans }}</a></small>{% endif %}</h1>

	<section class="map-list">
        <table class="table">
        	<tbody>
		        {% for child in gallery.children %}
		        	{% if child.hasImages() %}
		            <tr>
		            	<td><a href="{{ path('KunstmaanMediaBundle_image_chooser_show_folder', { 'folderId' :child.id, 'slug' : child.slug }) }}">{{ child.name | trans }}</td>
		            </tr>
		            {% endif %}
		        {% endfor %}
			</tbody>
        </table>
    </section>
	<section>
		<ul class="thumbnails" id="file-list">
		    {% for media in gallery.getImages %}
		        <li>
		            <a onclick="handleOK({imgpath:'{{ asset(upload_dir~media.show()) }}', title:'{{ media.name }}', id:'{{media.id}}'});return false;" class="thumbnail" href="{{ path('KunstmaanMediaBundle_media_show',  { 'mediaId' : media.id }) }}">
		                <img src="{{ asset(upload_dir~media.show('medium')) }}" alt="{{ media.name }}" />
		                <p class="img_name">{{ media.name }}</p>
		            </a>
		            <span class="helper">Click to select</span>
		         </li>
		    {% endfor %}
	    </ul>
	</section>
{% endblock %}