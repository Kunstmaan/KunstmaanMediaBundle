<form action="{{ path('KunstmaanMediaBundle_slide_edit', { 'media_id' : media.id } ) }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
        {{ form_errors(form) }}
        <div class="clearfix">
            <label for="xlInput3">Name</label>
            <div class="input">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="clearfix">
            {{ form_errors(form) }}
            <label for="xlInput3">Presentation code</label>
            <div class="input">
                {{ form_widget(form.content) }}
            </div>

        </div>
        <div class="clearfix">
            <label for="xlInput3">Type</label>
            <div class="input">
                {{ form_widget(form.type) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <div class="actions">
            <input class="btn primary type" type="submit" value="edit slide">
            <input onclick="window.location = '{{ path('KunstmaanMediaBundle_gallery_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}'" type="reset" class="btn" value="cancel" />
        </div>
    </fieldset>
</form>