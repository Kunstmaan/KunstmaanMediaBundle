{% extends 'KunstmaanMediaBundle:Default:layout.html.twig' %}

{% block subsidebar %}
    {% include 'KunstmaanMediaBundle:Gallery:sidebar.html.twig' %}
{% endblock %}

{% block subbreadcrumb %}
    <li><a href="{{ path('KunstmaanMediaBundle_media_slides') }}">{{ 'media.menu.slides' | trans }}</a> <span class="divider">/</span></li>
    <li><a href="{{ path('KunstmaanMediaBundle_gallery_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}">{{ gallery.name }}</a> <span class="divider">/</span></li>
	<li class="active">{{ 'media.slide.edit' | trans }}</li>
{% endblock %}

{% block title %}{{ 'media.slide.edit' | trans }}{% endblock%}

{% block content %}
    <h1>{{ 'media.slide.edit' | trans }}</h1>
    {% include 'KunstmaanMediaBundle:Slide:editform.html.twig' with { 'form': form } %}
{% endblock %}