{% extends 'KunstmaanMediaBundle:Default:layout.html.twig' %}

{% block subsidebar %}
    {% include 'KunstmaanMediaBundle:Folder:sidebar.html.twig' %}
{% endblock %}

{% block subbreadcrumb %}
    <li><a href="{{ path('KunstmaanMediaBundle_media_slides') }}">{{ 'media.menu.slides' | trans }}</a></li>
    <li><a href="{{ path('KunstmaanMediaBundle_folder_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}">{{ gallery.name }}</a></li>
	<li class="active">{{ 'media.slide.addto'| trans({'%gallery%': gallery.name }) | raw }}</li>
{% endblock %}

{% block title %}{{ 'media.slide.new' | trans }}{% endblock%}

{% block content %}
    <h1>{{ 'media.slide.addto'| trans({'%gallery%': gallery.name }) | raw }}</h1>
    {% include 'KunstmaanMediaBundle:Slide:form.html.twig' with { 'form': form } %}
{% endblock %}