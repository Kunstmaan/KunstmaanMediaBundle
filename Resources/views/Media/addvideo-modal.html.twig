<div id="addvideo-modal" class="modal hide fade">

    {% form_theme videoform 'KunstmaanAdminBundle:Form:fields.html.twig' %}

    <form action="{{ path('KunstmaanMediaBundle_media_modal_create', urlParams|merge({'type': 'video'})) }}" method="post" {{ form_enctype(videoform) }}>
        <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h3>{{ 'media.video.modal.title' | trans }}</h3>
        </div>
        <div class="modal-body--upload">{{ form_widget(videoform) }}</div>
        <div class="modal-footer">
            <div class="btn_group">
                <button class="btn btn-primary" type="submit">{{ 'media.video.modal.save' | trans }}</button>
                <button class="btn" type="reset" data-dismiss="modal">{{ 'form.cancel' | trans }}</button>
            </div>
        </div>
    </form>
</div>
