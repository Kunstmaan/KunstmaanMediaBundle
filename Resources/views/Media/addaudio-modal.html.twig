<div id="addaudio-modal" class="modal hide fade">

    {% form_theme audioform 'KunstmaanAdminBundle:Form:fields.html.twig' %}

    <form action="{{ path('KunstmaanMediaBundle_media_modal_create', { 'folderId' : folder.id, 'type': 'audio' }  ) }}" method="post" {{ form_enctype(audioform) }}>
        <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h3>{{ 'media.audio.modal.title' | trans }}</h3>
        </div>
        <div class="modal-body--upload">{{ form_widget(audioform) }}</div>
        <div class="modal-footer">
            <div class="btn_group">
                <button class="btn btn-primary" type="submit">{{ 'media.audio.modal.save' | trans }}</button>
                <button class="btn" type="reset" data-dismiss="modal">{{ 'form.cancel' | trans }}</button>
            </div>
        </div>
    </form>
</div>
