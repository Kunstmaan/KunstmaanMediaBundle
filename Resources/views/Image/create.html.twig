{% extends 'KunstmaanMediaBundle:Default:layout.html.twig' %}

{% block subsidebar %}
    {% include 'KunstmaanMediaBundle:Gallery:sidebar.html.twig' %}
{% endblock %}

{% block subbreadcrumb %}
    <li><a href="{{ path('KunstmaanMediaBundle_media_images') }}">{{ 'media.menu.images' | trans }}</a></li>
    <li><a href="{{ path('KunstmaanMediaBundle_gallery_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}">{{ gallery.name }}</a></li>
	<li class="active">{{ 'media.image.addto'| trans({'%gallery%': gallery.name }) | raw }}</li>
{% endblock %}

{% block title %}{{ 'media.image.new' | trans }}{% endblock%}

{% block content %}
    <h1>{{ 'media.image.addto'| trans({'%gallery%': gallery.name }) | raw }}</h1>
    {% include 'KunstmaanMediaBundle:Image:form.html.twig' with { 'form': form } %}
{% endblock %}