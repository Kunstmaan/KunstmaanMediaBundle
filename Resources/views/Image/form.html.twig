{% form_theme form 'KunstmaanMediaBundle:Form:fields.html.twig' %}
<form action="{{ path('KunstmaanMediaBundle_folder_image_create', { 'folderId' : gallery.id } ) }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
        {{ form_widget(form.media) }}

        {% if form.metadata is defined %}
            {{ form_widget(form.metadata) }}
        {% endif %}

        {{ form_rest(form) }}

        <div class="actions">
            <input class="btn primary type" type="submit" value="{{ 'media.image.add' | trans }}">
            <input onclick="window.location = '{{ path('KunstmaanMediaBundle_folder_show', { 'folderId' : gallery.id, 'slug' : gallery.slug } ) }}'" type="reset" class="btn" value="{{  'form.cancel' | trans }}" />
        </div>
    </fieldset>
</form>


