<form action="{{ path('KunstmaanMediaBundle_video_create', { 'gallery_id' : gallery.id } ) }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
    	{{ form_errors(form) }}
     	<div class="clearfix">
        <label for="xlInput3">{{ 'form.name' | trans }}</label>
        <div class="input">
           {{ form_widget(form.name) }}
        </div>
        </div>
        <div class="clearfix">
            {{ form_errors(form) }}
            <label for="xlInput3">{{ 'media.video.code' | trans }}</label>
            <div class="input">
                {{ form_widget(form.content) }}
            </div>

        </div>
        <div class="clearfix">
            <label for="xlInput3">{{ 'form.type' | trans }}</label>
            <div class="input">
                {{ form_widget(form.type) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <div class="actions">
            <input class="btn primary type" type="submit" value="{{ 'media.video.add' | trans }}">
            <input onclick="window.location = '{{ path('KunstmaanMediaBundle_gallery_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}'" type="reset" class="btn" value="{{ 'form.cancel' | trans }}" />
        </div>
    </fieldset>
</form>