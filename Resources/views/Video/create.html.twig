{% extends 'KunstmaanMediaBundle:Default:layout.html.twig' %}

{% block subsidebar %}
    {% include 'KunstmaanMediaBundle:Gallery:sidebar.html.twig' %}
{% endblock %}

{% block subbreadcrumb %}
    <li><a href="{{ path('KunstmaanMediaBundle_media_videos') }}">Video Galleries</a> <span class="divider">/</span></li>
    <li><a href="{{ path('KunstmaanMediaBundle_videogallery_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}">{{ gallery.name }}</a> <span class="divider">/</span></li>
	<li class="active">Add new video to "{{ gallery.name }}"</li>
{% endblock %}

{% block title %}New Video{% endblock%}

{% block content %}
    <h1>Add new video <small>to "{{ gallery.name }}"</small></h1>
    {% include 'KunstmaanMediaBundle:Video:form.html.twig' with { 'form': form } %}
{% endblock %}