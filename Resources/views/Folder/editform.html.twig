<form class="properties" action="{{ path('KunstmaanMediaBundle_folder_edit', { 'gallery_id' : gallery.id } ) }}" method="post" {{ form_enctype(editform) }}>
    <div class="prop_wrp">
        <div class="input_prop">
            {{ form_errors(editform) }}
            <label for="xlInput3">{{ 'form.name' |trans }}</label>
            {{ form_widget(editform.name) }}
        </div>
        <div class="input_prop">
            <label for="xlInput3">{{ 'media.gallery.sub.belongsto' |trans }}</label>
            {{ form_widget(editform.parent) }}
            <span class="help-block">{{ 'media.gallery.notrequired' |trans }}</span>
            {{ form_rest(editform) }}
        </div>
        <div class="input_prop">
        	<div class="btn_group">
            	<button class="btn" onclick="window.location = '{{ path('KunstmaanMediaBundle_folder_show', { 'id' : gallery.id, 'slug':gallery.slug } ) }}'" type="reset">{{ 'form.cancel' |trans }}</button>
            	<button class="btn btn-primary" type="submit">{{ 'media.gallery.edit' |trans }}</button>
           	</div>
        </div>
    </div>
</form>