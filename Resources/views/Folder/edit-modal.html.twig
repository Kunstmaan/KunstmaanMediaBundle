<div id="edit-modal" class="modal hide fade">
    <form action="{{ path('KunstmaanMediaBundle_folder_edit', { 'gallery_id' : gallery.id }  ) }}" method="post" {{ form_enctype(editform) }}>
        <div class="modal-header">
            <a href="#" class="close">&times;</a>
            <h3>{{ 'media.gallery.edit' | trans }}</h3>
        </div>
        <div class="modal-body">
            <p>
                <fieldset>
                    <div class="clearfix">
                        {{ form_errors(editform) }}
                        <label for="xlInput3">{{ 'form.name' | trans }}</label>
                        <div class="input">
                            {{ form_widget(editform.name) }}
                        </div>
                    </div>
                    <div class="clearfix">
                        <label for="xlInput3">{{ 'media.gallery.sub.belongsto' | trans }}</label>
                        <div class="input">
                            {{ form_widget(editform.parent) }}
                            <span class="help-block">{{ 'media.gallery.notrequired' | trans }}</span>
                        </div>
                        {{ form_rest(editform) }}
                    </div>
                </fieldset>
            </p>
        </div>
        <div class="modal-footer">
            <input class="btn primary type" type="submit" value="{{ 'media.gallery.edit' | trans }}">
            <a onclick="$('#edit-modal').modal('hide')" href="#" class="btn secondary">{{ 'form.cancel' | trans }}</a>
        </div>
    </form>
</div>