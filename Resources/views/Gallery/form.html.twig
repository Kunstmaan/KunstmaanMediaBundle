<form action="{{ path('KunstmaanMediaBundle_' ~ gallery.type ~ 'gallery_create' ) }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
        <div class="clearfix">
            {{ form_errors(form) }}
            <label for="xlInput3">{{ 'form.name' | trans }}</label>
            <div class="input">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="clearfix">
            <label for="xlInput3">{{ 'media.gallery.sub.belongsto' |trans }}</label>
            <div class="input">
                {{ form_widget(form.parent) }}
                <span class="help-block">{{ 'media.gallery.notrequired' |trans }}</span>
            </div>
            {{ form_rest(form) }}
        </div>
        <div class="actions">
            <input class="btn primary type" type="submit" value="{{ 'media.gallery.new' | trans }}">
            <input onclick="window.location = '{{ path('KunstmaanMediaBundle_media_' ~ gallery.type ~ 's' ) }}'" type="reset" class="btn" value="{{ 'form.cancel' |trans }}" />
        </div>
    </fieldset>
</form>